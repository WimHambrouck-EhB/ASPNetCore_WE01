<h2>Invoer gebruiker</h2>
<form asp-controller="Sessions" asp-action="Invoer">
    @if (ViewBag.Foutmelding != null)
    {
        <div class="alert alert-danger" role="alert">
            @ViewBag.Foutmelding
        </div>
    }
    <div class="form-group">
        <label for="username" class="control-label">Gebruikersnaam:</label>
        <input id="username" type="text" name="gebruikersnaam" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Verzenden" class="btn btn-primary" />
    </div>
</form>